<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="uuzzcircleimageview">
        <attr name="outside_border_thickness" format="dimension"/>
        <attr name="outside_border_distance" format="dimension"/>
        <attr name="outside_border_color" format="color"/>
        <attr name="inside_border_thickness" format="dimension"/>
        <attr name="inside_border_distance" format="dimension"/>
        <attr name="inside_border_color" format="color"/>
        <attr name="content_background_color" format="color"/>
        <attr name="content_color" format="color"/>
        <attr name="content_text" format="string"/>
        <attr name="content_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PtrClassicHeader">
        <attr format="integer" name="ptr_rotate_ani_time"/>
    </declare-styleable>

    <declare-styleable name="PtrFrameLayout">
        <attr format="reference" name="ptr_header"/>
        <attr format="reference" name="ptr_content"/>
        <attr format="float" name="ptr_resistance"/>
        <attr format="float" name="ptr_ratio_of_header_height_to_refresh"/>
        <attr format="integer" name="ptr_duration_to_close"/>
        <attr format="integer" name="ptr_duration_to_close_header"/>
        <attr format="boolean" name="ptr_pull_to_fresh"/>
        <attr format="boolean" name="ptr_keep_header_when_refresh"/>
    </declare-styleable>

    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FootGroupBtn">
        <attr name="icon_value" format="string"/>
        <attr name="text_value" format="string"/>
        <attr name="value_color" format="color"/>
        <attr name="value_color_focus" format="color"/>
        <attr name="background_color_focus" format="color"/>
        <attr name="background_color" format="color"/>
        <attr name="tip_color" format="color"/>
        <attr name="icon_size" format="dimension"/>
        <attr name="text_size" format="dimension"/>
        <attr name="icon_height" format="dimension"/>
        <attr name="text_height" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ImageViewer">
        <attr name="model" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="HorizontalDivLayout">
        <attr name="item_layout" format="integer"/>
    </declare-styleable>

    <declare-styleable name="LineChatView">
        <attr name="line_color" format="color|reference"/>                      <!-- 折线颜色 -->
        <attr name="unselected_point_color" format="color|reference"/>              <!-- 未选中端点颜色 -->
        <attr name="line_width" format="integer|reference"/>                    <!-- 线宽 -->
        <attr name="unselected_point_radius" format="integer|reference"/>       <!-- 未选中端点半径 -->
        <attr name="selected_point_radius" format="integer|reference"/>         <!-- 选中端点半径 -->
        <attr name="point_count" format="integer|reference"/>                   <!-- 每页端点数 -->
        <attr name="bessel" format="boolean|reference"/>                        <!-- 是否使用贝塞尔曲线 -->
    </declare-styleable>
</resources>
