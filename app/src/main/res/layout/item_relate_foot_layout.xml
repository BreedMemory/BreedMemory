<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="13dip"
    android:paddingBottom="13dip"
    android:paddingLeft="@dimen/primary_margin"
    android:paddingRight="@dimen/primary_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_relate_account"
        android:textSize="@dimen/second_text_size"
        android:textColor="@color/textColorPrimary"/>

    <com.uuzz.android.ui.view.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="@string/icon_triangle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="20dip"/>
</RelativeLayout>