<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/primary_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/second_text_size"
            android:text="@string/owned_tabs"/>

        <com.uuzz.android.ui.view.FlowLayout
            android:id="@+id/fl_tab_container"
            android:layout_marginTop="@dimen/primary_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="@dimen/primary_List_margin"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/colorAccent"/>

        <GridView
            android:id="@+id/gv_photo_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="38dp"
            android:numColumns="3"
            android:verticalSpacing="13dp"
            android:horizontalSpacing="6dp"/>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/primary_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textColorLight"
            android:textSize="@dimen/second_text_size"
            android:text="@string/cancel"/>
        <TextView
            android:id="@+id/tv_commit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/primary_margin"
            android:paddingRight="@dimen/primary_margin"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_green"
            android:textColor="@color/white"
            android:textSize="@dimen/second_text_size"
            android:text="@string/confirm_upload"/>
    </RelativeLayout>
</RelativeLayout>