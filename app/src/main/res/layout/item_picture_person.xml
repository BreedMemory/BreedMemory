<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8月15日" />

    <ImageView
        android:id="@+id/iv_show_uploading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/tv_show_time"
        android:src="@drawable/uploading_small"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="北京市" />

    <com.yijiehl.club.android.ui.view.NoScrollGridView
        android:id="@+id/person_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/iv_show_uploading"
        android:numColumns="3"
        android:layout_marginTop="19dip">

    </com.yijiehl.club.android.ui.view.NoScrollGridView>
</RelativeLayout>