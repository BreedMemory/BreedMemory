            style="@style/form_value" />
        <View
            android:id="@+id/v_baby_divider_head"
            style="@style/form_divider" />
        <TextView
            android:id="@+id/tv_baby_date_head"
            tools:text="10月13日"
            android:layout_toRightOf="@+id/v_baby_divider_head"
            style="@style/form_date" />

        <RadioGroup
            android:id="@+id/rg_baby_selector_head"
            style="@style/form_date_selector">
            <RadioButton
                android:id="@+id/rb_baby_head_date_week"
                android:text="@string/week"
                android:checked="true"
                style="@style/form_date_item" />
            <RadioButton
                android:id="@+id/rb_baby_head_date_month"
                android:text="@string/month"
                style="@style/form_date_item"/>
        </RadioGroup>

        <com.uuzz.android.ui.view.LineChatView
            android:id="@+id/lcv_baby_head"
            android:background="#8DE4C3"
            app:unselected_point_color="#d8d8d8"
            style="@style/chat" />

    </RelativeLayout>

<!--  胸围  -->
