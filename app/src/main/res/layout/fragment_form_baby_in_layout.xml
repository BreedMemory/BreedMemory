    </RelativeLayout>

    <LinearLayout
        android:id="@+id/baby_extra_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dip"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_baby_food"
            style="@style/health_info_container">
            <ImageView
                android:src="@drawable/ic_health_food"
                style="@style/health_info_icon" />
            <TextView
                android:text="@string/food"
                style="@style/health_info_title" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_baby_excretion"
            style="@style/health_info_container"
            android:layout_marginLeft="22dip"
            android:layout_marginRight="22dip">
            <ImageView
                android:src="@drawable/ic_excretion"
                style="@style/health_info_icon" />
            <TextView
                android:text="@string/cord"
                style="@style/health_info_title" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_baby_physiology"
            style="@style/health_info_container">
            <ImageView
                android:src="@drawable/ic_physiology"
                style="@style/health_info_icon" />
            <TextView
                android:text="@string/physiology"
                style="@style/health_info_title" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>