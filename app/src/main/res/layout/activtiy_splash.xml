<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/login_bg"
        style="@style/splash_background_image" />

    <ImageView
        android:id="@+id/im_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dip"
        android:layout_width="@dimen/login_logo"
        android:layout_height="@dimen/login_logo"
        android:src="@drawable/login_logo"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/im_logo"
        android:layout_marginTop="72dip"
        android:layout_width="wrap_content"
        android:ems="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="36dip"
        android:text="@string/app_name"/>

</RelativeLayout>