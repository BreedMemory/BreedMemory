<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content_container"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@id/footer"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="49dip" >
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_host"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            app:icon_value="@string/icon_add"
            app:text_value="@string/host_page"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip" />
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_health"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            app:icon_value="@string/icon_add"
            app:text_value="@string/host_page"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip"/>
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_photo"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            app:icon_value="@string/icon_add"
            app:text_value="@string/host_page"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip"/>
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_question"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            app:icon_value="@string/icon_add"
            app:text_value="@string/host_page"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip"/>
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_grow_up"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center"
            app:icon_value="@string/icon_add"
            app:text_value="@string/host_page"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip"/>
    </LinearLayout>
</RelativeLayout>