<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content_container"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@id/footer"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="62dip" >
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_host"
            app:icon_value="@string/icon_add"
            app:text_value="@string/host_page"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip"
            style="@style/foot_btn" />
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_health"
            style="@style/foot_btn"
            app:icon_value="@string/icon_add"
            app:text_value="@string/health"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip"/>

        <FrameLayout
            style="@style/foot_btn"
            android:layout_marginTop="0dip"
            android:background="@color/transparent">
            <View
                android:layout_marginTop="13dip"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/im_middle_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_foot_btn_middle"/>
            <com.uuzz.android.ui.view.FootGroupBtn
                android:id="@+id/fgb_photo"
                android:layout_marginTop="13dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:icon_value="@string/icon_add"
                app:text_value="@string/picture"
                app:background_color="@color/transparent"
                app:background_color_focus="@color/transparent"
                app:icon_size="20dip"
                app:text_size="9dip"
                app:value_color="@color/white"
                app:value_color_focus="@color/textColorFootDark"
                app:icon_height="25dip"
                app:text_height="11dip"/>
        </FrameLayout>
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_question"
            style="@style/foot_btn"
            app:icon_value="@string/icon_add"
            app:text_value="@string/ask_and_answer"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip"/>
        <com.uuzz.android.ui.view.FootGroupBtn
            android:id="@+id/fgb_grow_up"
            style="@style/foot_btn"
            app:icon_value="@string/icon_add"
            app:text_value="@string/grow_up"
            app:background_color="@color/colorAccent"
            app:background_color_focus="@color/colorAccentDark"
            app:icon_size="20dip"
            app:text_size="9dip"
            app:value_color="@color/white"
            app:value_color_focus="@color/textColorFootDark"
            app:icon_height="25dip"
            app:text_height="11dip"/>
    </LinearLayout>
</RelativeLayout>