<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_item_pic"
        android:layout_width="101dip"
        android:layout_height="181dip"
        android:background="@drawable/item_image_corners"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="18dip"
        android:layout_toRightOf="@+id/iv_item_pic"
        android:layout_marginLeft="14dip"
        android:text="标题" />

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_title"
        android:layout_toRightOf="@+id/iv_item_pic"
        android:layout_marginLeft="14dip"
        android:layout_marginTop="16dip"
        android:text="11111" />

    <ImageView
        android:id="@+id/iv_item_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_pic"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_item_content"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iv_item_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_pic"
        android:layout_below="@+id/tv_item_content"
        android:layout_toLeftOf="@+id/iv_item_share"
        android:src="@mipmap/ic_launcher" />


</RelativeLayout>