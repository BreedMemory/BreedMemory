<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/primary_margin"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="0dip"
        style="@style/form_container">

        <TextView
            android:text="@string/weight"
            style="@style/form_title" />

        <LinearLayout
            android:id="@+id/ll_weight_grit"
            style="@style/form_mode_selector">
            <TextView
                android:id="@+id/tv_weight_grit"
                android:text="@string/day_tian"
                style="@style/form_grit" />
            <ImageView
                android:src="@drawable/ic_triangle"
                style="@style/trangle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_weight_form_container"
            android:layout_below="@id/ll_weight_grit"
            style="@style/form_main_container">

            <TextView
                android:text="9月"
                style="@style/form_month" />
            <ImageView
                android:id="@+id/form_mother_weight"
                android:src="@drawable/temp_weight_form"
                style="@style/form" />

        </LinearLayout>

        <RadioGroup
            android:layout_below="@id/ll_weight_form_container"
            style="@style/form_grit_selector">
            <RadioButton
                android:id="@+id/rb_weight_grit_0"
                android:text="4"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_weight_grit_1"
                android:text="5"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_weight_grit_2"
                android:text="6"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_weight_grit_3"
                android:text="7"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_weight_grit_4"
                android:text="8"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_weight_grit_5"
                android:text="9"
                style="@style/grit_selector" />
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_weight_grit_6"
                android:text="10"
                style="@style/grit_selector" />
        </RadioGroup>
    </RelativeLayout>

<!--  体温  -->
    <RelativeLayout
        style="@style/form_container">

        <TextView
            android:text="@string/temperature"
            style="@style/form_title" />

        <LinearLayout
            android:id="@+id/ll_temperature_grit"
            style="@style/form_mode_selector">
            <TextView
                android:id="@+id/tv_temperature_grit"
                android:text="@string/day_tian"
                style="@style/form_grit" />
            <ImageView
                android:src="@drawable/ic_triangle"
                style="@style/trangle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_temperature_form_container"
            android:layout_below="@id/ll_temperature_grit"
            style="@style/form_main_container">

            <TextView
                android:text="9月"
                style="@style/form_month" />
            <ImageView
                android:id="@+id/form_mother_temperature"
                android:src="@drawable/temp_temperature_form"
                style="@style/form" />

        </LinearLayout>

        <RadioGroup
            android:layout_below="@id/ll_temperature_form_container"
            style="@style/form_grit_selector">
            <RadioButton
                android:id="@+id/rb_temperature_grit_0"
                android:text="4"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_temperature_grit_1"
                android:text="5"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_temperature_grit_2"
                android:text="6"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_temperature_grit_3"
                android:text="7"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_temperature_grit_4"
                android:text="8"
                style="@style/grit_selector" />
            <RadioButton
                android:id="@+id/rb_temperature_grit_5"
                android:text="9"
                style="@style/grit_selector" />
            <RadioButton
                android:checked="true"
                android:id="@+id/rb_temperature_grit_6"
                android:text="10"
                style="@style/grit_selector" />
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mother_extra_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dip"
        android:orientation="horizontal">
        <LinearLayout style="@style/health_info_container">
            <ImageView
                android:src="@drawable/ic_blood_sugar"
                style="@style/health_info_icon" />
            <TextView
                android:text="@string/blood_sugar"
                style="@style/health_info_title" />
        </LinearLayout>
        <LinearLayout style="@style/health_info_container"
            android:layout_marginLeft="22dip"
            android:layout_marginRight="22dip">
            <ImageView
                android:src="@drawable/ic_blood_pressure"
                style="@style/health_info_icon" />
            <TextView
                android:text="@string/blood_pressure"
                style="@style/health_info_title" />
        </LinearLayout>
        <LinearLayout style="@style/health_info_container">
            <ImageView
                android:src="@drawable/ic_sleep"
                style="@style/health_info_icon" />
            <TextView
                android:text="@string/sleep"
                style="@style/health_info_title" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>