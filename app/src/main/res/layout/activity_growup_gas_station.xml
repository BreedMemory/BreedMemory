<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="27dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:text="我的加油站: "
            android:textSize="21dip" />

        <TextView
            android:id="@+id/tv_show_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dip"
            android:layout_marginBottom="3dip"
            android:text="98,888"
            android:textColor="#ff6274"
            android:textSize="36dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:layout_marginBottom="3dip"
            android:text="元"
            android:textColor="#9b9b9b"
            android:textSize="21dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="186dip"
        android:layout_marginTop="86dip"
        android:background="@drawable/bg_club_introduction">

        <TextView
            android:id="@+id/tv_gas_club_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="26dip"
            android:layout_marginRight="26dip"
            android:text="这是月子会所给您宝宝的成长基金,未来宝宝的健康与教育相关的解决方案中,我们将助您一臂之力!"
            android:textSize="18dip" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:layout_above="@+id/tv_grow_choice"
        android:layout_marginBottom="15dip"
        android:background="#eeeeee"/>
    <TextView
        android:id="@+id/tv_grow_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom_content"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="15dip"
        android:textSize="21dip"
        android:text="成长精选"/>
    <LinearLayout
        android:id="@+id/layout_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_new_left"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="155dip"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/temp_gas_right" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="13dip"
                    android:text="Arla有机婴幼儿奶粉2段" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_new_right"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_gas_right"
                android:layout_width="wrap_content"
                android:layout_height="155dip"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/temp_gas" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="13dip"
                    android:text="素加宝宝配方奶粉2段" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>