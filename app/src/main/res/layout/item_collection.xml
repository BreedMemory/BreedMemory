<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_collect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/primary_margin"
        android:layout_marginTop="@dimen/primary_margin"
        android:textSize="@dimen/primary_margin"
        android:textColor="@color/textColorLight"/>
    <ImageView
        android:id="@+id/iv_collect_image"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:scaleType="center"
        android:layout_below="@+id/tv_collect_title"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:src="@drawable/bg_collect_default"
        android:layout_marginLeft="@dimen/primary_margin"/>
    <TextView
        android:id="@+id/tv_collect_content"
        android:layout_width="match_parent"
        android:layout_height="52dip"
        android:layout_below="@+id/tv_collect_title"
        android:layout_toRightOf="@+id/iv_collect_image"
        android:layout_marginLeft="@dimen/primary_margin"
        android:layout_marginRight="@dimen/primary_margin"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingExtra="3dip"
        android:textSize="18dip"
        android:textColor="#027f82"/>
</RelativeLayout>