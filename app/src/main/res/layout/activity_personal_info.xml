<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dip"
            android:background="#eeeeee" />

        <RelativeLayout
            android:id="@+id/layout_update_headpic"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip">

            <TextView
                style="@style/tv_personal_info_item_left_text"
                android:layout_centerVertical="true"
                android:text="@string/headpic" />

            <ImageView
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_alignParentRight="true"
                android:src="@drawable/temp_head_pic" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="3dip"
            android:background="#e1e1e1" />

        <RelativeLayout
            android:id="@+id/layout_update_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip">

            <TextView
                style="@style/tv_personal_info_item_left_text"
                android:layout_centerVertical="true"
                android:text="@string/nickname" />

            <TextView
                style="@style/tv_personal_info_item_right_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="zhoulingan" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dip"
            android:background="#e1e1e1" />

        <RelativeLayout
            android:id="@+id/layout_update_name"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip">

            <TextView
                style="@style/tv_personal_info_item_left_text"
                android:layout_centerVertical="true"
                android:text="@string/name" />

            <TextView
                style="@style/tv_personal_info_item_right_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="周玲安" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="3dip"
            android:background="#e1e1e1" />

        <RelativeLayout
            android:id="@+id/layout_update_sex"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip">

            <TextView
                style="@style/tv_personal_info_item_left_text"
                android:layout_centerVertical="true"
                android:text="@string/sex" />

            <TextView
                style="@style/tv_personal_info_item_right_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="女" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="3dip"
            android:background="#e1e1e1" />

        <RelativeLayout
            android:id="@+id/layout_update_phonenum"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip">

            <TextView
                style="@style/tv_personal_info_item_left_text"
                android:layout_centerVertical="true"
                android:text="@string/phone_number" />

            <TextView
                style="@style/tv_personal_info_item_right_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="18711111111" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="3dip"
            android:background="#e1e1e1" />

        <RelativeLayout
            android:id="@+id/layout_update_address"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip">

            <TextView
                style="@style/tv_personal_info_item_left_text"
                android:layout_centerVertical="true"
                android:text="@string/address" />

            <TextView
                style="@style/tv_personal_info_item_right_text"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="河北省秦皇岛市" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dip"
            android:background="#e1e1e1" />

        <RelativeLayout
            android:id="@+id/layout_update_relaccount"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip">

            <TextView
                style="@style/tv_personal_info_item_left_text"
                android:layout_centerVertical="true"
                android:text="@string/relaccount" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#e1e1e1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="33dip"
            android:text="更换手机，请联系会所管理员！" />

        <TextView
            android:id="@+id/tv_club_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:text="010-66616662"
            android:textColor="#f07aac" />
    </LinearLayout>

</ScrollView>