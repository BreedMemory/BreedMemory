<?xml version="1.0" encoding="utf-8"?>
<com.uuzz.android.ui.view.ptr.PtrClassicFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/load_more_list_view_ptr_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="300dip"
            android:layout_height="20dip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="16dip"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_all"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/growup_title_left_pink"
                android:textColor="@color/white"
                android:textSize="14dip"
                android:text="全部"/>
            <TextView
                android:id="@+id/tv_health"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/growup_title_center_white"
                android:textColor="@color/colorPrimary"
                android:textSize="14dip"
                android:text="健康"/>
            <TextView
                android:id="@+id/tv_education"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/growup_title_right_white"
                android:textColor="@color/colorPrimary"
                android:textSize="14dip"
                android:text="教育"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成长的烦恼"
            android:layout_below="@id/layout_title"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="20dip"
            android:visibility="gone"/>
        <View
            android:id="@+id/v_dir_line"
            android:layout_below="@id/tv_dir"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@drawable/growup_dir_line"
            android:visibility="gone"/>

        <com.uuzz.android.ui.view.ptr.PtrListView
            android:id="@+id/lv_listview"
            android:layout_below="@id/v_dir_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:fadingEdge="none"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/bg_item_white_touchable"
            android:listSelector="@drawable/bg_item_white_touchable"
            android:scrollbarStyle="outsideOverlay" />
    </RelativeLayout>


</com.uuzz.android.ui.view.ptr.PtrClassicFrameLayout>