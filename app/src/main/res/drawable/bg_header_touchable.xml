<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#29FFFFFF"
                />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                >
            </padding>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/colorPrimary"
                />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                >
            </padding>
        </shape>
    </item>

</selector>